# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java source files
[*.java]
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# XML files (pom.xml, etc.)
[*.xml]
indent_size = 4
max_line_length = 120

# Jelly files (Jenkins UI templates)
[*.jelly]
indent_size = 2
max_line_length = 120

# YAML files (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Properties files
[*.properties]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Package.json and similar
[{package.json,package-lock.json}]
indent_size = 2

# Git config files
[.gitconfig]
indent_style = tab

# Ignore generated files
[target/**]
insert_final_newline = unset
trim_trailing_whitespace = unset

[build/**]
insert_final_newline = unset
trim_trailing_whitespace = unset

